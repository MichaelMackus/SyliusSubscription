{
    "name": "sylius/subscription",
    "type": "library",
    "description": "Flexible subscription system for Symfony2 ecommerce applications.",
    "keywords": ["subscription", "club-membership", "recurring", "shop", "webshop", "ecommerce", "sylius"],
    "homepage": "http://sylius.org",
    "license": "MIT",
    "authors": [
        {
            "name": "Daniel Richter",
            "email": "nexyz9@gmail.com",
            "homepage": "http://www.codemassacre.com"
        },
        {
            "name": "Michael Mackus",
            "email": "michaelmackus@gmail.com"
        },
        {
            "name": "Community contributions",
            "homepage": "https://github.com/Sylius/SyliusSubscriptionBundle/contributors"
        }
    ],
    "require": {
        "php":                             ">=5.3.3",

        "sylius/core":                     "^1.0",
        "sylius/resource":                 "^1.0"
    },
    "require-dev": {
        "phpspec/phpspec":   "~2.0",
        "symfony/form":      "~2.3",
        "symfony/validator": "~2.3"
    },
    "config": {
        "bin-dir": "bin"
    },
    "autoload": {
        "psr-4": { "Sylius\\Component\\Subscription\\": "" }
    },
    "autoload-dev": {
        "psr-4": { "Sylius\\Component\\Subscription\\spec\\": "spec/" }
    },
    "minimum-stability": "dev",
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
